---
type Props = {
  index: number;
  title: string;
  description: string;
  image: string;
};

const { index, title, description, image } = Astro.props;
---

<div data-aos="fade-up" data-aos-duration={`${500 + index * 100}`}>
  <div class="w-20 h-20 float-left">
    <img src={image} alt={title} />
  </div>
  <div class="flex flex-col items-start ml-4">
    <h3 class="text-[16px] md:text-[24px] font-bold mb-2 md:mb-4">
      {title}
    </h3>
    <p class="text-gray text-[14px] md:text-[18px]">{description}</p>
  </div>
</div>
